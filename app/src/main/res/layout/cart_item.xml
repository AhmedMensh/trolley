<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    android:layout_margin="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/plustImgV"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_plus"
            app:layout_constraintVertical_bias=".25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/minusImgV"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitXY"
            app:layout_constraintVertical_bias=".75"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/ic_minus"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/productImgV"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_product"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/productNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vegetables"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_margin="6dp"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/productImgV"/>

        <TextView
            android:id="@+id/productCategoryTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 KG"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/productNameTV"
            app:layout_constraintStart_toStartOf="@id/productNameTV"/>

        <TextView
            android:id="@+id/productUnitPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 unit * 6.46 EGP"
            android:background="@drawable/rounded_rect_green"
            android:textColor="@android:color/white"
            android:padding="2dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/productCategoryTV"
            app:layout_constraintStart_toStartOf="@id/productNameTV"/>

        <TextView
            android:id="@+id/totalPriceTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6.46 EGP"
            android:textColor="@android:color/black"
            android:padding="4dp"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/productUnitPriceTV"
            app:layout_constraintStart_toStartOf="@id/productNameTV"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>