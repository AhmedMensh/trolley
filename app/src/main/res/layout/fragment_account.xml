<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.more.ui.account.AccountFragment">

    <include layout="@layout/tool_bar" android:id="@+id/toolBar"/>

    <EditText
        android:id="@+id/userNameET"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:background="@drawable/rect_sharp_corner_white"
        android:elevation="4dp"
        android:hint="Name"
        android:padding="10dp"
        android:inputType="text"
        android:drawablePadding="6dp"

        android:drawableStart="@drawable/ic_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar" />


    <EditText
        android:id="@+id/phoneET"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:background="@drawable/rect_sharp_corner_white"
        android:elevation="4dp"
        android:hint="Phone"
        android:padding="10dp"
        android:inputType="phone"
        android:drawablePadding="6dp"

        android:drawableStart="@drawable/ic_smartphone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userNameET" />


    <EditText
        android:id="@+id/emailET"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:background="@drawable/rect_sharp_corner_white"
        android:elevation="4dp"
        android:hint="Email"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:drawablePadding="6dp"

        android:drawableStart="@drawable/ic_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phoneET" />

    <EditText
        android:id="@+id/addressET"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:background="@drawable/rect_sharp_corner_white"
        android:elevation="4dp"
        android:hint="Apartment / House number"
        android:padding="10dp"
        android:inputType="text"
        android:drawablePadding="6dp"

        android:drawableStart="@drawable/ic_apartment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailET" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp"
        android:elevation="6dp"
        android:paddingStart="6dp"
        android:paddingEnd="4dp"
        android:background="@drawable/rect_sharp_corner_white"
        app:layout_constraintTop_toBottomOf="@id/addressET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_address"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:paddingStart="4dp"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:text="@string/map_location"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:layout_height="16dp"
            app:srcCompat="@drawable/ic_dashboard_black_24dp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>